---
import '../../styles/global.css';

const proteinTools = [
  [
    'One -> three / three -> one letter amino acid format',
    '/formatprotein',
  ],
  ['Protein parameters', '/protParams'],
];
const dnaTools = [
  ['Translate DNA to protein', '/translate'],
  ['Transcribe DNA to RNA', '/transcribe'],
  ['Reverse complement DNA', '/reverseComplement'],
  ['DNA parameters', '/dnaParams'],
  ['RNA parameters', '/rnaParams'],
];
const resources = [
  ['Amino acid weights', '/resources'],
  ['Nucleotide weights', '/resources'],
  ['Codon tables', '/resources'],
];

const prodUrl = 'https://courageous-otter.netlify.app/';
---
<button class="nav-button">
  <span class="material-symbols-outlined">menu</span>
  <p>Menu</p>
</button>

<div class="nav-links">
  <section class="toolSection">
    <p class="section-p">Protein tools</p>
    <div class="section-buttons">
      {
        proteinTools.map((tool) => (
          <a class="navItem" href={tool[1]}>
            {tool[0]}
          </a>
        ))
      }
    </div>
  </section>
  <hr />
  <section class="toolSection">
    <p class="section-p">DNA tools</p>
    <div class="section-buttons">
      {
        dnaTools.map((tool) => (
          <a class="navItem" href={tool[1]}>
            {tool[0]}
          </a>
        ))
      }
    </div>
  </section>
  <hr />
  <section class="toolSection">
    <p class="section-p">Resources</p>
    <div class="section-buttons">
      {
        resources.map((tool) => (
          <a class="navItem" href={tool[1]}>
            {tool[0]}
          </a>
        ))
      }
    </div>
  </section>
</div>

