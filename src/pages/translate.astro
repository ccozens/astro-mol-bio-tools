---
import '../styles/global.css';
import PageLayout from '../layouts/PageLayout.astro';
import FormatChooser from '../components/react/dna/FormatChooser';
import TranslateDna from '../components/react/dna/TranslateDna';
import Input from '../components/react/Input';
import { Molecule } from '../types';

const pageTitle = 'Translate DNA';
---

<PageLayout pageTitle={pageTitle}>
  <section class="reactArea">
    <TranslateDna client:load />
    <FormatChooser client:load />
    <Input
      client:load
      ariaLabelContent={'DNA input form for translate DNA'}
      placeholderText={'Enter DNA sequence here...'}
      inputType={Molecule.Dna}
    />
  </section>
</PageLayout>
