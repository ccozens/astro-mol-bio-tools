---
import '../styles/global.css';
import PageLayout from '../layouts/PageLayout.astro';
import FormatChooser from '../components/FormatChooser';
import TranslateDna from '../components/TranslateDna';
import Input from '../components/Input';

const pageTitle = 'Translate DNA';
---

<PageLayout pageTitle={pageTitle}>
  <section class="reactArea">
    <Input
      client:load
      ariaLabelContent={'DNA input form for translate DNA'}
      placeholderText={'Enter DNA sequence here...'}
    />
    <FormatChooser client:load/>
    <TranslateDna client:load/>
  </section>
</PageLayout>
