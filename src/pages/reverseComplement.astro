---
import '../styles/global.css';
import PageLayout from '../layouts/PageLayout.astro';

import Input from '../components/react/Input';
import ReverseComplement from '../components/react/dna/ReverseComplement';
import { Molecule } from '../types';

const pageTitle = 'Reverse complement DNA';
---

<PageLayout pageTitle={pageTitle}>
  <section class="reactArea">
    <ReverseComplement client:load />
    <Input
      client:load
      ariaLabelContent={'DNA input form for reverse complement'}
      placeholderText={'Enter DNA sequence here...'}
      inputType={Molecule.Dna}
    />
  </section>
</PageLayout>
