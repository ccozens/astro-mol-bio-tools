---
import '../styles/global.css';
import '../styles/chartStyles.css'
import PageLayout from '../layouts/PageLayout.astro';
import Input from '../components/react/Input';
import { Molecule } from '../types';
// import ComputeExtinctionCoefficients from '../components/react/protein/ComputeExtinctionCoefficients';
import ProteinParameters from '../components/react/protein/ProteinParameters';
import CountAminoAcids from '../components/react/protein/CountAminoAcids';
import GetFromUniprot from '../components/react/protein/GetFromUniprot';

const pageTitle = 'Protein parameters';
---

<PageLayout pageTitle={pageTitle}>
  <section class="reactArea">
    <div class="outerOutputBox chartBox">
      
      <ProteinParameters
      client:load
      ariaLabelContent={'Protein parameters'}/>
      
      <CountAminoAcids
      client:load
      ariaLabelContent={'Amino acid count'}/>
    </div>


    <Input
      client:load
      ariaLabelContent={'DNA input form for protein parameters'}
      placeholderText={'Enter protein sequence as single amino acid (eg MILD...) here...'}
      inputType={Molecule.Protein}
    />

    <GetFromUniprot
    client:load
    ariaLabelContent="Get protein sequence from Uniprot"
    placeholderText={'DPOL_THEGO or P56689'}
    />

  </section>
</PageLayout>
